{
  "name": "quillhaven",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:win": "set NODE_OPTIONS=--max-old-space-size=4096 && next build",
    "build:safe": "set NEXT_TELEMETRY_DISABLED=1 && set NODE_OPTIONS=--max-old-space-size=4096 && next build --no-lint",
    "docker:build": "docker build -t quillhaven .",
    "docker:run": "docker run -p 3000:3000 quillhaven",
    "docker:dev": "docker-compose --profile dev up",
    "docker:prod": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:test": "tsx prisma/test-connection.ts",
    "deploy:staging": "node -e \"console.log('Use: ./scripts/deploy.sh staging or .\\\\scripts\\\\deploy.ps1 staging')\"",
    "deploy:production": "node -e \"console.log('Use: ./scripts/deploy.sh production or .\\\\scripts\\\\deploy.ps1 production')\"",
    "quality:check": "npm run type-check && npm run lint && npm run format:check && npm run test && npm run build",
    "quality:fix": "npm run lint:fix && npm run format && npm run test",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && echo 'Security check completed'",
    "health:check": "curl -f http://localhost:3000/api/health || echo 'Health check failed'",
    "precommit": "npm run quality:fix",
    "prepush": "npm run quality:check"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.25.5",
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@supabase/supabase-js": "^2.52.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "svix": "^1.69.0",
    "tailwind-merge": "^3.3.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.12.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
